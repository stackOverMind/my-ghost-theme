{{!< default}}

<div id="content" class="wrapper_rosette">

    {{> header }}

    <main role="main">
        <a class="back" href="{{@blog.url}}"><i class="fa fa-long-arrow-left"></i><span>Back to the front page</span></a>
        
        <div class="box_rosette">
            {{#post}}
            <article class="{{post_class}}">
                <header class="post-header">
                    <h1 class="post-title">{{title}}</h1>
                </header>
                <section class="post-content">
                    {{content}}
                </section>
            </article>
            {{/post}}
        </div>
    </main>
</div>