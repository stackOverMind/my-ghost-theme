<nav class="pagination_rosette" role="navigation">
    {{#if prev}}
        <a class="newer-posts" href="{{page_url prev}}"><i class="fa fa-long-arrow-left"></i><span>Newer Posts</span></a>
    {{/if}}
    <span class="page-number">Page {{page}} / {{pages}}</span>
    {{#if next}}
        <a class="older-posts" href="{{page_url next}}"><span>Older Posts</span><i class="fa fa-long-arrow-right"></i></a>
    {{/if}}
</nav>